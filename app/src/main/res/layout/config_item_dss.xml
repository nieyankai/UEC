<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/dss_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="数据名称"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_region"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="所属区域"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/ip"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="IP地址"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/group"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="Group"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="Dss"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_res"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="资源类型"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_time"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="创建时间"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <Button
        android:id="@+id/edit_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="12sp"
        android:text="编辑"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="12sp"
        android:text="删除"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />

</LinearLayout>