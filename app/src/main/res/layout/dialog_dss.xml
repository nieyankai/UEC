<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ImageView
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center"
        android:background="@color/colorAccent"
        android:contentDescription="@string/app_name" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/dss_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="数据名称..." />
            <EditText
                android:id="@+id/dss_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="IP地址..." />
            <EditText
                android:id="@+id/dss_dss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="Dss..." />
            <EditText
                android:id="@+id/dss_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="Group..." />
            <Spinner
                android:id="@+id/dss_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="资源类型..." />
            <Spinner
                android:id="@+id/dss_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:hint="区域..." />

            <EditText
                android:id="@+id/dss_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:inputType="numberDecimal"
                android:hint="上限..." />
            <EditText
                android:id="@+id/dss_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/region_text_size"
                android:textColor="@color/colorLight"
                android:textColorHint="@color/colorLight"
                android:inputType="numberDecimal"
                android:hint="下限..." />
        </LinearLayout>
    </ScrollView>

    </LinearLayout>