<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/dss_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="数据名称"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_region"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="所属区域"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_status"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="状态"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_value"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="当前值"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/dss_time"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="8sp"
        android:text="更新时间"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <Button
        android:id="@+id/check_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="12sp"
        android:text="查看"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
</LinearLayout>