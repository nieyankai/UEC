<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/region_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"
        android:text="编号"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/region_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:text="区域名称"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/region_dev_num"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:text="设备数量"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/region_time"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:text="创建时间"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <TextView
        android:id="@+id/region_comment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:text="备注"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <Button
        android:id="@+id/edit_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="12sp"
        android:text="编辑"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="12sp"
        android:text="删除"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/config_region_text_size" />

</LinearLayout>